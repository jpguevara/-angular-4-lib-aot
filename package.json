        "inline-resources": "gulp --gulpfile ./.config/gulpfile.js --cwd ./",
        "karma": "karma",
        "test": "karma start --single-run",
        "start": "ng serve",
        "setup": "node ./.config/build-scripts/setup.js"
    },
